<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/o_activity_update_password"
    tools:context="biyaniparker.com.parker.view.user.PasswordUpdateView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:layout_width="match_parent"
                style="@android:style/Widget.Holo.Light.EditText"
                android:layout_height="wrap_content"
                android:id="@+id/edUserName"
                android:hint="Enter User Name "/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:layout_width="match_parent"
                style="@android:style/Widget.Holo.Light.EditText"
                android:layout_height="wrap_content"
                android:id="@+id/edOldPass"
                android:hint="Enter Old Password "/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:layout_width="match_parent"
                style="@android:style/Widget.Holo.Light.EditText"
                android:layout_height="wrap_content"
                android:id="@+id/edNewPass"
                android:hint="Enter New Password "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:layout_width="match_parent"
                style="@android:style/Widget.Holo.Light.EditText"
                android:layout_height="wrap_content"
                android:id="@+id/edRePass"
                android:hint="Re-Type New Password "/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/btnSave"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/buttonround"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
