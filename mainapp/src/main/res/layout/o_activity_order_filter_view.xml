<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="biyaniparker.com.parker.view.homeadmin.OrderFilterView">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/l1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/dtFrom"
                android:layout_weight="1"
                android:text="FORM DATE"
                android:background="#728fd9"
                android:textColor="@android:color/white"
                />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:id="@+id/dtTo"
            android:text="TO DATE"
            android:background="#728fd9"
            android:textColor="@android:color/white"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/lbottom">



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:id="@+id/btnShow"
            android:text="Show"
            android:background="@drawable/buttonround"
            android:textColor="@android:color/white"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:id="@+id/l2"
        android:layout_below="@id/l1"
        android:layout_above="@id/lbottom"

        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edCustomer"
            android:hint="      Type Customer Name to Search"/>



            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listCustomer">

            </ListView>

    </LinearLayout>






</RelativeLayout>
